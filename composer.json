{
    "name": "awesome-packages/awesome-cli",
    "description": "An awesome cli package for php",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "./vendor/bin/phpunit --colors test"
    },
    "autoload": {
        "psr-4": {
            "AwesomePackages\\AwesomeCli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AwesomePackages\\AwesomeCliTests\\": "test/src/"
        }
    },
    "authors": [
        {
            "name": "rhuangabrielsantos",
            "email": "rhuan.santos@db1.com.br"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "9.5.x-dev"
    },
    "bin": [
        "awesome-cli"
    ],
    "minimum-stability": "dev",
    "config": {
        "platform": {
            "php": "7.4.0"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
